{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./tsbuild",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "tsbuild",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}